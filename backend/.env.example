# === Japan Real Estate Scraper — Environment Variables ===

# Database — Supabase PostgreSQL connection string (same as Next.js app)
DATABASE_URL=postgresql://postgres.xxx:password@aws-0-region.pooler.supabase.com:6543/postgres

# Set to True for local development without Supabase (uses SQLite)
USE_SQLITE=false

# API key for securing remote trigger endpoint (must match SCRAPER_API_KEY in Next.js .env)
SCRAPER_API_KEY=your-secret-api-key-here

# Supabase Storage — for uploading property images
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# Google Translate API — for translating Japanese descriptions to English
GOOGLE_TRANSLATE_API_KEY=your-google-translate-key

# MLIT reinfolib API (optional — for hazard data)
REINFOLIB_API_KEY=

# Scraping behavior
SCRAPE_DEFAULT_DELAY=3.0
SCRAPE_MAX_RETRIES=3

# Scheduler — auto-scrape on interval
SCHEDULER_ENABLED=false
SCHEDULER_INTERVAL_HOURS=6.0

# App
APP_ENV=production
APP_DEBUG=false
